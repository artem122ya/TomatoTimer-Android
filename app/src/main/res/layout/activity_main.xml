<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <study.br1221.productivitytimer.views.TimerView
        android:id="@+id/timerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="0" />

    <ImageButton
        android:id="@+id/stopButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_columnWeight="5"
        android:layout_gravity="center"
        android:layout_row="1"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_stop_black_85_opacity"
        android:contentDescription="@string/stop_button_content_description"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/startPauseButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="1"
        android:layout_columnWeight="0"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:clickable="true"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:srcCompat="@drawable/ic_play_white_85_opacity"
        android:focusable="true"
        android:contentDescription="@string/start_and_pause_button_content_description"/>

    <ImageButton
        android:id="@+id/skipButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="2"
        android:layout_columnWeight="5"
        android:layout_gravity="center"
        android:layout_row="1"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_skip_next_black_85_opacity"
        android:contentDescription="@string/skip_button_content_description"/>
</GridLayout>
